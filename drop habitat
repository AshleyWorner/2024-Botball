#include <kipr/wombat.h>
int lwheel_port = 1;
int rwheel_port = 3;
int claw_open = 1024;
int claw_close = 1400;

int main()
{
    enable_servos();
    cmpc(0);
    set_servo_position(0,claw_open);     //claw open
    msleep(3000);
    while(gmpc(0)<6000)
    {
        mav(0,500);
        msleep(10);
    }
    mav(0,0);
    msleep(1000);
    while (gmpc(0)>5900-500)               //lower claw (distance)
    {
    mav(0,-500);
    msleep(10);
    }
    mav(0,0);
    set_servo_position(0,claw_close);    //claw close
    msleep(1000);
    while(gmpc(0)<7000)
    {
        mav(0,500);
        msleep(10);
    }
    mav(0,0);
    msleep(1000);
    mav(1,-500);
    mav(3,-500);
    msleep(3000);
    set_servo_position(0,claw_open);
    msleep(1000);
    disable_servos();
}
